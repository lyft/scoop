<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/standard_transitions_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Standard transitions"
        />

    <Button
        android:id="@+id/custom_transition_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Custom transition"
        />

    <Button
        android:id="@+id/dialog_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Dialog transition sample"
        />

    <Button
        android:id="@+id/dialog_on_back_override_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Dialog on back override"
        />
</LinearLayout>
