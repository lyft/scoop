<?xml version="1.0" encoding="utf-8"?>
<com.example.scoop.basics.ui.DemosController xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    >
    <Button
        android:id="@+id/navigation_sample_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Navigation sample"
        />

    <Button
        android:id="@+id/parametrized_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Parametrized screen"
        />

    <Button
        android:id="@+id/standard_transitions_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Standard transitions"
        />

    <Button
        android:id="@+id/custom_transition_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Custom transition"
        />

    <Button
        android:id="@+id/wizard_sample_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/span80"
        android:text="Wizard sample"
        />

</com.example.scoop.basics.ui.DemosController>